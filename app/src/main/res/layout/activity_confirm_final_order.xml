<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please confirm Shipment details"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipient"
        android:textSize="18sp"
        android:layout_below="@+id/txt"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/shipment_name"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_toRightOf="@+id/name"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:hint="Recipient name"/>
    <TextView
        android:id="@+id/tvphoneship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="18sp"
        android:layout_below="@+id/shipment_name"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/shipment_phone_number"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvphoneship"
        android:layout_below="@+id/shipment_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:hint="Your Phone Number"/>
    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="18sp"
        android:layout_below="@+id/shipment_phone_number"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/shipment_address"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvaddress"
        android:layout_below="@+id/shipment_phone_number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:hint="Shipment address"/>
    <TextView
        android:id="@+id/tvcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="18sp"
        android:layout_below="@+id/shipment_address"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/shipment_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvcity"
        android:layout_below="@+id/shipment_address"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:hint="City name"/>
    <TextView
        android:id="@+id/tvcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textSize="18sp"
        android:layout_below="@+id/shipment_city"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toRightOf="@+id/tvcard"
        android:layout_below="@+id/shipment_city"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Card number"/>
    <EditText
        android:id="@+id/card_details_expirydate"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvcard"
        android:layout_below="@+id/tvcard"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="mm/yy"/>
    <EditText
        android:id="@+id/card_details_ccv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/card_details_expirydate"
        android:layout_below="@+id/tvcard"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Ccv"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/card_details_ccv">
        <RadioButton
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local delivery"/>
        <RadioButton
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overseas delivery"/>
    </RadioGroup>


    <Button
        android:id="@+id/confirm_final_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

</RelativeLayout>